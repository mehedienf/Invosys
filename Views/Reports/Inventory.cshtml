@model IEnumerable<InventoryTracker.Models.Product>

@{
    ViewData["Title"] = "ইনভেন্টরি রিপোর্ট";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 fw-bold text-primary mb-0">
            <i class="bi bi-boxes me-2"></i>ইনভেন্টরি রিপোর্ট
        </h1>
        <p class="text-muted">স্টক বিশ্লেষণ ও মূল্যায়ন</p>
    </div>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>ফিরে যান
        </a>
        <button class="btn btn-outline-primary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>প্রিন্ট
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4 col-lg">
        <div class="card bg-primary text-white shadow">
            <div class="card-body text-center">
                <h6 class="opacity-75">মোট পণ্য</h6>
                <h2>@ViewBag.TotalProducts</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg">
        <div class="card bg-info text-white shadow">
            <div class="card-body text-center">
                <h6 class="opacity-75">মোট স্টক</h6>
                <h2>@ViewBag.TotalStock</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg">
        <div class="card bg-success text-white shadow">
            <div class="card-body text-center">
                <h6 class="opacity-75">মোট মূল্য</h6>
                <h2>৳@(((decimal)(ViewBag.TotalValue ?? 0)).ToString("N0"))</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg">
        <div class="card bg-danger text-white shadow">
            <div class="card-body text-center">
                <h6 class="opacity-75">স্টক শেষ</h6>
                <h2>@ViewBag.OutOfStock</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg">
        <div class="card bg-warning shadow">
            <div class="card-body text-center">
                <h6 class="opacity-75">কম স্টক</h6>
                <h2>@ViewBag.LowStock</h2>
            </div>
        </div>
    </div>
</div>

<!-- Inventory Table -->
<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-table me-2"></i>সম্পূর্ণ ইনভেন্টরি</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>পণ্যের নাম</th>
                        <th>ক্যাটাগরি</th>
                        <th class="text-end">একক মূল্য</th>
                        <th class="text-center">স্টক</th>
                        <th class="text-end">মোট মূল্য</th>
                        <th class="text-center">স্ট্যাটাস</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var product in Model)
                        {
                            var totalValue = product.Price * product.Quantity;
                            <tr class="@(product.Quantity == 0 ? "table-danger" : product.Quantity < 10 ? "table-warning" : "")">
                                <td><strong>@product.Name</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.Category))
                                    {
                                        <span class="badge bg-secondary">@product.Category</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">৳@product.Price.ToString("N2")</td>
                                <td class="text-center">
                                    <span class="badge @(product.Quantity == 0 ? "bg-danger" : product.Quantity < 10 ? "bg-warning" : "bg-success") fs-6">
                                        @product.Quantity
                                    </span>
                                </td>
                                <td class="text-end fw-bold">৳@totalValue.ToString("N2")</td>
                                <td class="text-center">
                                    @if (product.Quantity == 0)
                                    {
                                        <span class="badge bg-danger">স্টক শেষ</span>
                                    }
                                    else if (product.Quantity < 10)
                                    {
                                        <span class="badge bg-warning">কম স্টক</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">পর্যাপ্ত</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <i class="bi bi-inbox fs-1 text-muted"></i>
                                <p class="text-muted mt-2">কোনো পণ্য নেই</p>
                            </td>
                        </tr>
                    }
                </tbody>
                @if (Model != null && Model.Any())
                {
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end"><strong>মোট:</strong></td>
                            <td class="text-center"><strong>@Model.Sum(p => p.Quantity)</strong></td>
                            <td class="text-end text-success fs-5 fw-bold">৳@(((decimal)(ViewBag.TotalValue ?? 0)).ToString("N2"))</td>
                            <td></td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>
