@model InventoryTracker.Models.Product

@{
    ViewData["Title"] = "পণ্যের বিবরণ";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-eye me-2"></i>পণ্যের বিবরণ
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="text-primary mb-1">@Model.Name</h2>
                        <span class="badge bg-secondary">ID: #@Model.Id</span>
                        @if (!string.IsNullOrEmpty(Model.Category))
                        {
                            <span class="badge bg-info ms-1">@Model.Category</span>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <h6 class="text-muted"><i class="bi bi-card-text me-1"></i>বিবরণ</h6>
                        <p class="lead">@Model.Description</p>
                    </div>
                }
                
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <i class="bi bi-currency-dollar fs-1 text-success"></i>
                                <h6 class="text-muted mt-2">মূল্য</h6>
                                <h3 class="text-success">৳@Model.Price.ToString("N2")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <i class="bi bi-boxes fs-1 text-primary"></i>
                                <h6 class="text-muted mt-2">স্টকে আছে</h6>
                                <h3 class="@(Model.Quantity < 10 ? "text-danger" : "text-primary")">@Model.Quantity</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <i class="bi bi-calendar fs-1 text-info"></i>
                                <h6 class="text-muted mt-2">যোগ করা হয়েছে</h6>
                                <h5 class="text-info">@Model.CreatedAt.ToString("dd MMM yyyy")</h5>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-1"></i>সম্পাদনা
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>মুছুন
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>ফিরে যান
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>