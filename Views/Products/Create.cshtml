@model InventoryTracker.Models.Product

@{
    ViewData["Title"] = "নতুন পণ্য যোগ করুন";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i>নতুন পণ্য যোগ করুন
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-tag me-1"></i>পণ্যের নাম
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="পণ্যের নাম লিখুন" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-12 mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-card-text me-1"></i>বিবরণ
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="পণ্যের বিবরণ (ঐচ্ছিক)"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label">
                                <i class="bi bi-currency-dollar me-1"></i>মূল্য (৳)
                            </label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label">
                                <i class="bi bi-boxes me-1"></i>পরিমাণ
                            </label>
                            <input asp-for="Quantity" class="form-control" type="number" placeholder="0" />
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-12 mb-4">
                            <label asp-for="Category" class="form-label">
                                <i class="bi bi-folder me-1"></i>ক্যাটাগরি
                            </label>
                            <input asp-for="Category" class="form-control" placeholder="ক্যাটাগরি (ঐচ্ছিক)" />
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>সংরক্ষণ করুন
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>ফিরে যান
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}