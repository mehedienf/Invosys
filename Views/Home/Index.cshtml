@using InventoryTracker.Models
@model dynamic

@{
    ViewData["Title"] = "ড্যাশবোর্ড";
    var totalProducts = ViewBag.TotalProducts ?? 0;
    var totalStock = ViewBag.TotalStock ?? 0;
    var totalSales = ViewBag.TotalSales ?? 0;
    var todaySales = ViewBag.TodaySales ?? 0M;
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-5 fw-bold text-primary">
            <i class="bi bi-speedometer2 me-2"></i>ড্যাশবোর্ড
        </h1>
        <p class="text-muted">আপনার ইনভেন্টরি এবং বিক্রয়ের সারসংক্ষেপ</p>
    </div>
</div>

<!-- Quick Stats Cards -->
<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-3">
        <div class="card bg-primary text-white h-100 shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">মোট পণ্য</h6>
                        <h2 class="card-title mb-0">@totalProducts</h2>
                    </div>
                    <i class="bi bi-box-seam fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "Products")" class="text-white text-decoration-none small">
                    বিস্তারিত দেখুন <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card bg-success text-white h-100 shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">মোট স্টক</h6>
                        <h2 class="card-title mb-0">@totalStock</h2>
                    </div>
                    <i class="bi bi-clipboard-data fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "Inventory")" class="text-white text-decoration-none small">
                    ইনভেন্টরি দেখুন <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card bg-info text-white h-100 shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">মোট বিক্রয়</h6>
                        <h2 class="card-title mb-0">@totalSales</h2>
                    </div>
                    <i class="bi bi-receipt fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "Sales")" class="text-white text-decoration-none small">
                    বিক্রয় দেখুন <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card bg-warning text-dark h-100 shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">আজকের আয়</h6>
                        <h2 class="card-title mb-0">৳@todaySales.ToString("N0")</h2>
                    </div>
                    <i class="bi bi-currency-dollar fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Create", "Sales")" class="text-dark text-decoration-none small">
                    নতুন বিক্রয় <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <h4 class="mb-3"><i class="bi bi-lightning-charge me-2"></i>দ্রুত অ্যাকশন</h4>
    </div>
</div>

<div class="row g-4">
    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-6 col-lg-3">
            <div class="card border border-2 border-primary h-100 shadow">
                <div class="card-body text-center py-4">
                    <i class="bi bi-plus-circle text-primary fs-1 mb-3"></i>
                    <h5 class="card-title">নতুন পণ্য যোগ করুন</h5>
                    <p class="card-text text-muted">আপনার ইনভেন্টরিতে নতুন পণ্য যোগ করুন</p>
                    <a href="@Url.Action("Create", "Products")" class="btn btn-primary">
                        <i class="bi bi-plus me-1"></i>পণ্য যোগ
                    </a>
                </div>
            </div>
        </div>
    }
    
    <div class="col-md-6 col-lg-3">
        <div class="card border border-2 border-success h-100 shadow">
            <div class="card-body text-center py-4">
                <i class="bi bi-cart-plus text-success fs-1 mb-3"></i>
                <h5 class="card-title">নতুন বিক্রয়</h5>
                <p class="card-text text-muted">একটি নতুন বিক্রয় রেকর্ড করুন</p>
                <a href="@Url.Action("Create", "Sales")" class="btn btn-success">
                    <i class="bi bi-cart-check me-1"></i>বিক্রয়
                </a>
            </div>
        </div>
    </div>
    
    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-6 col-lg-3">
            <div class="card border border-2 border-info h-100 shadow">
                <div class="card-body text-center py-4">
                    <i class="bi bi-arrow-repeat text-info fs-1 mb-3"></i>
                    <h5 class="card-title">স্টক আপডেট</h5>
                    <p class="card-text text-muted">ইনভেন্টরি স্টক পরিবর্তন করুন</p>
                    <a href="@Url.Action("Index", "Inventory")" class="btn btn-info text-white">
                        <i class="bi bi-pencil me-1"></i>স্টক আপডেট
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card border border-2 border-warning h-100 shadow">
                <div class="card-body text-center py-4">
                    <i class="bi bi-bar-chart-line text-warning fs-1 mb-3"></i>
                    <h5 class="card-title">রিপোর্ট দেখুন</h5>
                    <p class="card-text text-muted">বিক্রয় ও স্টক রিপোর্ট দেখুন</p>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-warning text-dark">
                        <i class="bi bi-graph-up me-1"></i>রিপোর্ট
                    </a>
                </div>
            </div>
        </div>
    }
</div>