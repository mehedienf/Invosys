@model InventoryTracker.Models.SalesTransaction

@{
    ViewData["Title"] = "বিক্রয়ের বিস্তারিত";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-receipt me-2"></i>বিক্রয় #@Model.Id
                </h4>
                <span class="badge bg-light text-dark">
                    <i class="bi bi-calendar me-1"></i>@Model.SaleDate.ToString("dd MMM yyyy, hh:mm tt")
                </span>
            </div>
            <div class="card-body p-4">
                <!-- Customer Info -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="text-muted mb-2"><i class="bi bi-person me-1"></i>গ্রাহক</h6>
                                <h5 class="mb-3">
                                    @(string.IsNullOrEmpty(Model.CustomerName) ? "সাধারণ গ্রাহক" : Model.CustomerName)
                                </h5>
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <h6 class="text-muted mb-2"><i class="bi bi-telephone me-1"></i>ফোন নম্বর</h6>
                                    <p class="mb-0"><strong>@Model.PhoneNumber</strong></p>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h6 class="opacity-75 mb-2"><i class="bi bi-cash me-1"></i>মোট মূল্য</h6>
                                <h3 class="mb-0">৳@Model.TotalAmount.ToString("N2")</h3>
                            </div>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-sticky me-2"></i><strong>মন্তব্য:</strong> @Model.Notes
                    </div>
                }
                
                <!-- Items Table -->
                <h5 class="mb-3"><i class="bi bi-box me-1"></i>বিক্রিত পণ্য</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>পণ্যের নাম</th>
                                <th class="text-center">পরিমাণ</th>
                                <th class="text-end">একক মূল্য</th>
                                <th class="text-end">মোট</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SalesItems != null && Model.SalesItems.Any())
                            {
                                var index = 1;
                                @foreach (var item in Model.SalesItems)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td><strong>@item.Product?.Name</strong></td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@item.QuantitySold</span>
                                        </td>
                                        <td class="text-end">৳@item.UnitPrice.ToString("N2")</td>
                                        <td class="text-end text-success fw-bold">
                                            ৳@((item.UnitPrice * item.QuantitySold).ToString("N2"))
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end"><strong>মোট:</strong></td>
                                <td class="text-end text-success fs-5 fw-bold">৳@Model.TotalAmount.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                
                <div class="d-flex gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>ফিরে যান
                    </a>
                    <button class="btn btn-primary" onclick="window.print()">
                        <i class="bi bi-printer me-1"></i>প্রিন্ট
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
