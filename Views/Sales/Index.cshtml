@model IEnumerable<InventoryTracker.Models.SalesTransaction>

@{
    ViewData["Title"] = "বিক্রয়";
}

@Html.AntiForgeryToken()

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 fw-bold text-primary mb-0">
            <i class="bi bi-cart-check me-2"></i>বিক্রয়
        </h1>
        <p class="text-muted">সকল বিক্রয়ের তালিকা</p>
    </div>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>নতুন বিক্রয়
    </a>
</div>

<!-- Search Section -->
<div class="card shadow mb-4">
    <div class="card-body">
        <label class="form-label"><i class="bi bi-search me-1"></i>বিক্রয় খুঁজুন</label>
        <input type="text" id="saleSearch" class="form-control" placeholder="গ্রাহকের নাম বা ফোন নম্বর দ্বারা খুঁজুন..." />
    </div>
</div>

<div class="card shadow">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>বিক্রয় #</th>
                        <th>গ্রাহক</th>
                        <th>ফোন নম্বর</th>
                        <th>তারিখ</th>
                        <th>আইটেম সংখ্যা</th>
                        <th class="text-end">মোট মূল্য</th>
                        <th class="text-center">অ্যাকশন</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var sale in Model)
                        {
                            <tr class="sale-row">
                                <td>
                                    <span class="badge bg-primary">#@sale.Id</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sale.CustomerName))
                                    {
                                        <i class="bi bi-person me-1"></i>@sale.CustomerName
                                    }
                                    else
                                    {
                                        <span class="text-muted">সাধারণ গ্রাহক</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sale.PhoneNumber))
                                    {
                                        <i class="bi bi-telephone me-1"></i>@sale.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-calendar me-1"></i>
                                    @sale.SaleDate.ToString("dd MMM yyyy, hh:mm tt")
                                </td>
                                <td>
                                    <span class="badge bg-info">@(sale.SalesItems?.Count ?? 0) টি পণ্য</span>
                                </td>
                                <td class="text-end">
                                    @if (sale.DiscountAmount > 0)
                                    {
                                        <div>
                                            <small class="text-muted text-decoration-line-through">৳@sale.TotalAmount.ToString("N2")</small>
                                        </div>
                                        <strong class="text-success fs-5">৳@sale.FinalAmount.ToString("N2")</strong>
                                        <div>
                                            <small class="badge bg-danger">-৳@sale.DiscountAmount.ToString("N2") ছাড়</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <strong class="text-success fs-5">৳@sale.TotalAmount.ToString("N2")</strong>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> বিস্তারিত
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="bi bi-cart-x fs-1 text-muted"></i>
                                <p class="text-muted mt-2">এখনো কোনো বিক্রয় হয়নি</p>
                                <a asp-action="Create" class="btn btn-success btn-sm">
                                    <i class="bi bi-plus"></i> প্রথম বিক্রয় করুন
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model != null && Model.Any() && User.IsInRole("Admin"))
{
    <div class="card mt-4 bg-light">
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-4">
                    <h6 class="text-muted">মোট বিক্রয় সংখ্যা</h6>
                    <h3 class="text-primary">@Model.Count()</h3>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">মোট আয়</h6>
                    <h3 class="text-success">৳@Model.Sum(s => s.FinalAmount).ToString("N2")</h3>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">গড় বিক্রয়</h6>
                    <h3 class="text-info">৳@Model.Average(s => s.FinalAmount).ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>
}