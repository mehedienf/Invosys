@model InventoryTracker.Models.Product

@{
    ViewData["Title"] = "স্টক আপডেট";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-arrow-repeat me-2"></i>স্টক আপডেট করুন
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-info mb-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-box-seam fs-1 me-3"></i>
                        <div>
                            <h5 class="mb-1">@Model.Name</h5>
                            <p class="mb-0">বর্তমান স্টক: <strong class="fs-4">@Model.Quantity</strong></p>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Adjust" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-plus-slash-minus me-1"></i>পরিমাণ
                        </label>
                        <input type="number" name="adjustmentQuantity" class="form-control form-control-lg" 
                               value="0" min="0" placeholder="পরিমাণ লিখুন" required />
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-gear me-1"></i>অ্যাকশন
                        </label>
                        <div class="d-grid gap-2 d-md-flex">
                            <div class="form-check form-check-inline flex-fill">
                                <input class="btn-check" type="radio" name="adjustmentType" 
                                       id="addStock" value="add" checked />
                                <label class="btn btn-outline-success w-100" for="addStock">
                                    <i class="bi bi-plus-circle me-1"></i>স্টক যোগ করুন
                                </label>
                            </div>
                            <div class="form-check form-check-inline flex-fill">
                                <input class="btn-check" type="radio" name="adjustmentType" 
                                       id="subtractStock" value="subtract" />
                                <label class="btn btn-outline-danger w-100" for="subtractStock">
                                    <i class="bi bi-dash-circle me-1"></i>স্টক কমান
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-info text-white">
                            <i class="bi bi-check-circle me-1"></i>আপডেট করুন
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>ফিরে যান
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>