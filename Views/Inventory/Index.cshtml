@model IEnumerable<InventoryTracker.Models.Product>

@{
    ViewData["Title"] = "ইনভেন্টরি";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 fw-bold text-primary mb-0">
            <i class="bi bi-clipboard-data me-2"></i>ইনভেন্টরি
        </h1>
        <p class="text-muted">স্টক পরিচালনা করুন</p>
    </div>
    <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>নতুন পণ্য
    </a>
</div>

<!-- Search Section -->
<div class="card shadow mb-4">
    <div class="card-body">
        <label class="form-label"><i class="bi bi-search me-1"></i>পণ্য খুঁজুন</label>
        <input type="text" id="productSearch" class="form-control" placeholder="পণ্যের নাম বা ক্যাটাগরি দ্বারা খুঁজুন..." />
    </div>
</div>

<div class="card shadow">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>পণ্যের নাম</th>
                        <th>ক্যাটাগরি</th>
                        <th class="text-center">বর্তমান স্টক</th>
                        <th class="text-end">মূল্য</th>
                        <th class="text-center">স্ট্যাটাস</th>
                        <th class="text-center">অ্যাকশন</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="product-row">
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Category))
                                    {
                                        <span class="badge bg-secondary">@item.Category</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="fs-5 fw-bold @(item.Quantity < 10 ? "text-danger" : "text-success")">
                                        @item.Quantity
                                    </span>
                                </td>
                                <td class="text-end">৳@item.Price.ToString("N2")</td>
                                <td class="text-center">
                                    @if (item.Quantity == 0)
                                    {
                                        <span class="badge bg-danger">স্টক শেষ</span>
                                    }
                                    else if (item.Quantity < 10)
                                    {
                                        <span class="badge bg-warning">কম স্টক</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">পর্যাপ্ত</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Adjust" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-arrow-repeat"></i> আপডেট
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="bi bi-inbox fs-1 text-muted"></i>
                                <p class="text-muted mt-2">কোনো পণ্য নেই</p>
                                <a asp-controller="Products" asp-action="Create" class="btn btn-primary btn-sm">
                                    <i class="bi bi-plus"></i> প্রথম পণ্য যোগ করুন
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Real-time inventory search by name or category
    document.getElementById('productSearch')?.addEventListener('keyup', function(e) {
        const searchText = e.target.value.trim().toLowerCase();
        let visibleCount = 0;
        
        document.querySelectorAll('.product-row').forEach(row => {
            const productName = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
            const productCategory = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
            const matches = productName.includes(searchText) || productCategory.includes(searchText);
            row.style.display = matches ? '' : 'none';
            if (matches) visibleCount++;
        });
        
        // Show/hide no results message
        const tbody = document.querySelector('tbody');
        let noResultsRow = tbody.querySelector('.no-results-row');
        if (visibleCount === 0 && document.querySelectorAll('.product-row').length > 0) {
            if (!noResultsRow) {
                noResultsRow = document.createElement('tr');
                noResultsRow.className = 'no-results-row';
                noResultsRow.innerHTML = `<td colspan="6" class="text-center py-4"><i class="bi bi-inbox fs-1 text-muted"></i><p class="text-muted mt-2">কোনো মিল খুঁজে পাওয়া যায়নি</p></td>`;
                tbody.appendChild(noResultsRow);
            }
        } else if (noResultsRow) {
            noResultsRow.remove();
        }
    });
</script>