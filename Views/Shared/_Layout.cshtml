<!DOCTYPE html>
<html lang="bn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvoSys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                <i class="bi bi-box-seam me-2"></i>InvoSys
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house-door me-1"></i>হোম
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Products")">
                                    <i class="bi bi-box me-1"></i>পণ্য
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Inventory")">
                                    <i class="bi bi-clipboard-data me-1"></i>ইনভেন্টরি
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Sales")">
                                <i class="bi bi-cart-check me-1"></i>বিক্রয়
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Reports")">
                                    <i class="bi bi-bar-chart-line me-1"></i>রিপোর্ট
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Users", "Account")">
                                    <i class="bi bi-people me-1"></i>ইউজার
                                </a>
                            </li>
                        }
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ShopInfo", "Account")">
                                    <i class="bi bi-shop me-1"></i>দোকানের তথ্য
                                </a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-warning text-dark ms-1">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-info ms-1">Staff</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i>লগআউট
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="bi bi-box-arrow-in-right me-1"></i>লগইন
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">
                &copy; @DateTime.Now.Year - InvoSys
                <span class="text-muted mx-2">|</span>
                <a href="javascript:void(0)" class="text-white text-decoration-none" data-bs-toggle="modal" data-bs-target="#developerModal">
                    <i class="bi bi-person-circle me-1"></i>ডেভেলপার
                </a>
            </p>
        </div>
    </footer>

    <!-- Developer Info Modal -->
    <div class="modal fade" id="developerModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-person-circle me-2"></i>ডেভেলপার</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="bi bi-person-circle fs-1 text-primary mb-3 d-block"></i>
                    <h6 class="fw-bold mb-1">Mehedi Enam</h6>
                    <p class="text-muted small mb-2">Water Molecule Ltd.</p>
                    <p class="text-muted small mb-3">ফুল-স্ট্যাক ওয়েব অ্যাপ্লিকেশন ডেভেলপার</p>
                    
                    <div class="mb-3">
                        <p class="small mb-1">
                            <i class="bi bi-telephone me-2"></i>
                            <a href="tel:+8801609650015" class="text-primary text-decoration-none">+8801609650015</a>
                        </p>
                    </div>
                    
                    <hr />
                    
                    <div class="mb-3">
                        <h6 class="fw-bold small mb-2">
                            <i class="bi bi-box-seam me-1"></i>InvoSys
                        </h6>
                        <p class="small text-muted mb-2">ইনভেন্টরি এবং বিক্রয় ব্যবস্থাপনা সিস্টেম</p>
                        <p class="small mb-0">
                            <strong>প্রযুক্তি:</strong> .NET 8, Entity Framework Core, Bootstrap 5
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">বন্ধ করুন</button>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>