@{
    ViewData["Title"] = "অ্যাক্সেস নিষিদ্ধ";
}

<div class="row justify-content-center">
    <div class="col-lg-6 text-center py-5">
        <i class="bi bi-shield-x text-danger" style="font-size: 6rem;"></i>
        <h1 class="display-4 text-danger mt-3">অ্যাক্সেস নিষিদ্ধ!</h1>
        <p class="lead text-muted">দুঃখিত, এই পেজে আপনার অ্যাক্সেস নেই।</p>
        <p class="text-muted">
            আপনি <strong>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</strong> হিসেবে লগইন করেছেন।<br>
            এই পেজটি দেখতে Admin অ্যাক্সেস প্রয়োজন।
        </p>
        <div class="mt-4">
            <a href="/" class="btn btn-primary me-2">
                <i class="bi bi-house me-1"></i>হোমে যান
            </a>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-right me-1"></i>লগআউট
            </a>
        </div>
    </div>
</div>
