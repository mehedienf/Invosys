@model InventoryTracker.Models.RegisterViewModel

@{
    ViewData["Title"] = "নতুন ইউজার তৈরি";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-plus me-2"></i>নতুন ইউজার তৈরি করুন
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold">
                            <i class="bi bi-person me-1"></i>ইউজারনেম
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="ইউজারনেম দিন" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">
                            <i class="bi bi-person-badge me-1"></i>পুরো নাম
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="পুরো নাম দিন" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">
                            <i class="bi bi-lock me-1"></i>পাসওয়ার্ড
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="পাসওয়ার্ড দিন" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold">
                            <i class="bi bi-lock-fill me-1"></i>পাসওয়ার্ড নিশ্চিত করুন
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="পাসওয়ার্ড আবার দিন" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Role" class="form-label fw-bold">
                            <i class="bi bi-shield me-1"></i>রোল
                        </label>
                        <select asp-for="Role" class="form-select">
                            <option value="Staff">Staff (শুধু বিক্রয়)</option>
                            <option value="Admin">Admin (সব অ্যাক্সেস)</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>তৈরি করুন
                        </button>
                        <a asp-action="Users" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>ফিরে যান
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
